<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LS.category_fragment.CategoryFragment1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/vp"
            android:layout_width="match_parent"
            android:layout_height="180dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="#33000000"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="51dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="3dp"
                android:orientation="horizontal">

                <View
                    android:id="@+id/dot_0"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/zh_dot_yes" />

                <View
                    android:id="@+id/dot_1"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/zh_dot_no" />

                <View
                    android:id="@+id/dot_2"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginRight="2dp"
                    android:background="@mipmap/zh_dot_no" />

                <View
                    android:id="@+id/dot_3"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@mipmap/zh_dot_no" />

                <View
                    android:id="@+id/dot_4"
                    android:layout_width="8dp"
                    android:layout_height="8dp"
                    android:layout_marginLeft="2dip"
                    android:layout_marginRight="2dip"
                    android:background="@mipmap/zh_dot_no" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shop1"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img1"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ls_shop1" />

                <Button
                    android:id="@+id/ls_btn1"
                    android:layout_width="70dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text="iPad Pro "
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥3500"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop2"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img2"
                    android:layout_width="100dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/ls_shop2" />

                <Button
                    android:id="@+id/ls_btn2"
                    android:layout_width="92dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text=" iPad mini 5"
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥1388"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shop3"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img3"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/gj_shop1" />

                <Button
                    android:id="@+id/ls_btn3"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text="iPad10.2"
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥2399"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop4"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img4"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/hjl_shop1" />

                <Button
                    android:id="@+id/ls_btn4"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text=" iPad 2018"
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥1998"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/shop5"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img5"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/hjl_shop2" />

                <Button
                    android:id="@+id/ls_btn5"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text="12.9 iPad Pro"
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥3950"
                    android:textColor="#FF0000" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/shop6"
                android:layout_width="145dp"
                android:layout_height="190dp"
                android:layout_weight="1"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/ls_img6"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    android:layout_marginTop="20dp"
                    android:src="@mipmap/gx_shop1" />

                <Button
                    android:id="@+id/ls_btn6"
                    android:layout_width="80dp"
                    android:layout_height="30dp"
                    android:layout_marginTop="10dp"
                    android:background="#00000000"
                    android:text="主机 I3 9100F"
                    android:textColor="#A9A9A9" />

                <TextView
                    android:layout_width="50dp"
                    android:layout_height="30dp"
                    android:text="￥2599"
                    android:textColor="#FF0000" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</ScrollView>